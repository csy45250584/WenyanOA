<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16">

    <ImageView
        android:id="@+id/iv_dish_image"
        android:layout_width="@dimen/dp_77"
        android:layout_height="@dimen/dp_55"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_toRightOf="@id/iv_dish_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="健康营养早餐"
            android:textColor="@color/text2"
            android:textSize="@dimen/text_30px"/>

        <TextView
            android:id="@+id/tv_dish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:text="10"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_30px"/>
    </LinearLayout>

    <com.rey.material.widget.Button
        android:id="@+id/btn_add_dish"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_25"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_btn_blue"
        android:text="加入菜篮"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_24px"
        app:rd_cornerRadius="@dimen/dp_3"
        app:rd_style="@style/MyColorRippleWaveStyle"/>
