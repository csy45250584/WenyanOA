<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_8"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_8"
    android:background="@android:color/white"
    app:cardCornerRadius="@dimen/dp_8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_12"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_attendance_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018.08.06的考勤"
                    android:textColor="@color/text2"
                    android:textSize="@dimen/text_30px"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_time_to_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:text="上班时间:       08:00"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_28px"/>

            <TextView
                android:id="@+id/tv_time_off_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:text="下班时间:       08:00"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_28px"/>

            <TextView
                android:id="@+id/tv_time_clock_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:text="上班打卡时间:       08:00"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_28px"/>

            <TextView
                android:id="@+id/tv_time_clock_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:text="下班打卡时间:       08:00"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_28px"/>

            <TextView
                android:id="@+id/tv_attendance_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:text="出勤时长：     8小时"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_28px"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_attendance_on_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_3"
            android:background="@drawable/bg_delete_dishes"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_1"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_1"
            android:text="缺勤(未打卡)"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/sp_12"/>

        <TextView
            android:id="@+id/tv_attendance_off_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_attendance_on_state"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/bg_delete_dishes"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_1"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_1"
            android:text="缺勤(未打卡)"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/sp_12"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>