<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/indicator_approval"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/colorWhite"
        app:tl_divider_width="0dp"
        app:tl_indicator_color="@color/colorPrimary"
        app:tl_indicator_corner_radius="@dimen/dp_0"
        app:tl_indicator_height="@dimen/dp_0"
        app:tl_tab_space_equal="true"
        app:tl_textBold="NONE"
        app:tl_textSelectColor="@color/colorPrimary"
        app:tl_textUnselectColor="@color/text3"
        app:tl_textsize="@dimen/text_26px"
        app:tl_underline_color="@color/divider"
        app:tl_underline_height="0dp">
    </com.flyco.tablayout.CommonTabLayout>
</LinearLayout>