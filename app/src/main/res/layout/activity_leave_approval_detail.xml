<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.haokuo.midtitlebar.MidTitleBar
        android:id="@+id/mid_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        app:midTitle="XX的公差"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:padding="@dimen/dp_16">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_12">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="@dimen/dp_45"
                        android:src="@drawable/touxiang"/>

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@id/iv_avatar"
                        android:text="张晨杰"
                        android:textColor="@color/text2"
                        android:textSize="@dimen/text_32px"/>

                    <TextView
                        android:id="@+id/tv_approve_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/tv_name"
                        android:layout_below="@id/tv_name"
                        android:text="等待一级审批"
                        android:textColor="@color/colorApproveState"
                        android:textSize="@dimen/text_26px"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/divider"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_12"
                        android:text="审批编号"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/text_30px"/>

                    <TextView
                        android:id="@+id/tv_approval_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123123"
                        android:textColor="@color/text2"
                        android:textSize="@dimen/text_30px"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_12"
                        android:text="所在科室"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/text_30px"/>

                    <TextView
                        android:id="@+id/tv_dept_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="消化内科"
                        android:textColor="@color/text2"
                        android:textSize="@dimen/text_30px"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_12"
                        android:text="担任职务"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/text_30px"/>

                    <TextView
                        android:id="@+id/tv_duties"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="党委书记"
                        android:textColor="@color/text2"
                        android:textSize="@dimen/text_30px"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_12"
                        android:text="请假类别"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/text_30px"/>

                    <TextView
                        android:id="@+id/tv_leave_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="病假"
                        android:textColor="@color/text2"
                        android:textSize="@dimen/text_30px"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_12"
                        android:text="开始时间"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/text_30px"/>

                    <TextView
                        android:id="@+id/tv_begin_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018-01-01"
                        android:textColor="@color/text2"
                        android:textSize="@dimen/text_30px"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_12"
                        android:text="结束时间"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/text_30px"/>

                    <TextView
                        android:id="@+id/tv_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018-01-01"
                        android:textColor="@color/text2"
                        android:textSize="@dimen/text_30px"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_12"
                        android:text="请假时长"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/text_30px"/>

                    <TextView
                        android:id="@+id/tv_leave_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1天"
                        android:textColor="@color/text2"
                        android:textSize="@dimen/text_30px"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/dp_4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_12"
                        android:text="请假事由"
                        android:textColor="@color/text3"
                        android:textSize="@dimen/text_30px"/>

                    <TextView
                        android:id="@+id/tv_leave_reason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="哈哈哈哈哈"
                        android:textColor="@color/text2"
                        android:textSize="@dimen/text_30px"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_approver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:overScrollMode="never"
                    />
            </LinearLayout>

            <com.haokuo.wenyanoa.view.ApprovalItem2
                android:id="@+id/ai_cc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                app:itemType="cc"
                app:titleText="抄送人"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <com.rey.material.widget.Button
        android:id="@+id/btn_read"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_70"
        android:background="@color/colorPrimary"
        android:text="已读"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_18"
        app:rd_style="@style/LoginButtonStyle"
        />
</LinearLayout>